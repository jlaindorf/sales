<?php

$connectionPath = __DIR__ . '/../connection.php';
require_once $connectionPath;

global $pdo;

try {
    $pdo->beginTransaction();

    $sql = "
    ALTER TABLE clients 
    ADD COLUMN \"contact\" VARCHAR(20)  
    ";

    $pdo->exec($sql);

    $pdo->commit();

    echo "Migration 006 - Coluna 'contact' adicionada com sucesso!" . PHP_EOL;
} catch (PDOException $e) {
    $pdo->rollBack();
    die("Erro ao adicionar coluna 'contact': " . $e->getMessage());
}
?>
